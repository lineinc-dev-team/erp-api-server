{
    // =========================================================================
    // QueryDSL 설정
    // =========================================================================
    // =========================================================================
    // Java 핵심 설정
    // =========================================================================
    "java.compile.nullAnalysis.mode": "automatic",
    "java.configuration.updateBuildConfiguration": "automatic",
    "java.maxConcurrentBuilds": 3,
    "java.import.gradle.enabled": true,
    "java.import.gradle.wrapper.enabled": true,
    // =========================================================================
    // Lombok
    // =========================================================================
    "java.jdt.ls.lombokSupport.enabled": true,
    // =========================================================================
    // Google Style Guide (프로젝트 맞춤 설정: 4칸 들여쓰기, 120자 줄 길이)
    // =========================================================================
    "java.format.enabled": true,
    "java.format.settings.url": ".vscode/java-google-style.xml",
    "java.format.settings.profile": "GoogleStyle",
    "java.format.comments.enabled": false,
    // =========================================================================
    // 저장 시 자동 정리
    // =========================================================================
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    // =========================================================================
    // 에디터 UI
    // =========================================================================
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.inlayHints.enabled": "on",
    "editor.rulers": [
        120
    ],
    "[java]": {
        "editor.defaultFormatter": "redhat.java",
        "editor.tabSize": 4,
        "editor.insertSpaces": true
    },
    // =========================================================================
    // 자동완성
    // =========================================================================
    "java.completion.enabled": true,
    "java.completion.guessMethodArguments": "insertBestGuessedArguments",
    "java.completion.chain.enabled": true,
    "java.completion.importOrder": [
        "java",
        "javax",
        "org",
        "com"
    ],
    "java.sources.organizeImports.starThreshold": 99,
    "java.sources.organizeImports.staticStarThreshold": 99,
    // =========================================================================
    // 인레이 힌트 (파라미터 이름 표시)
    // =========================================================================
    "java.inlayHints.parameterNames.enabled": "all",
    // =========================================================================
    // 소스 다운로드 및 참조
    // =========================================================================
    "java.referencesCodeLens.enabled": true,
    "java.eclipse.downloadSources": true,
    // =========================================================================
    // 디버깅
    // =========================================================================
    "java.debug.settings.hotCodeReplace": "auto",
    "java.debug.settings.showToString": true,
    // =========================================================================
    // 파일 설정
    // =========================================================================
    "files.encoding": "utf8",
    "files.autoGuessEncoding": true,
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    // =========================================================================
    // 성능 최적화
    // =========================================================================
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/bin/**": true,
        "**/.gradle/**": true
    },
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    }
}
